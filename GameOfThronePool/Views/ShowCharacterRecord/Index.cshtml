@model IEnumerable<GameOfThronePool.Models.ShowCharacterStatusRecord>
@{
    ViewData["Title"] = "DeadPool for Season 8";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/WinterIsComing.jpg" alt="Assistant to the night king" class="img-responsive" height="1200" />
            <div class="carousel-caption" role="option">
                <p>
                    Register or sign in now!
                    @Html.ActionLink("Register⚔", "Login", "Account", null, new { @class = "btn btn-default" })
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/DarkAndFullOfTerrors.jpg" alt="ForTheNightIsDarkAndFullOfTerrors" class="img-responsive" height="1200" />
            <div class="carousel-caption" role="option">
                <p>
                    Join the group chat!
                    <a class="btn btn-default" href="https://www.facebook.com/groups/375898252994350/">
                        Join!
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.CharacterName)</th>
        <th>
            @Html.DisplayNameFor(model => model.AliveStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WhiteWalkerStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterDiedEpisodeNo)
        </th>

    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AliveStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WhiteWalkerStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterDiedEpisodeNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ShowCharacterStatusRecordID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ShowCharacterStatusRecordID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ShowCharacterStatusRecordID })
        </td>
    </tr>
    }

</table>
<div class="row">
    <div class="col-md-4">
        <h2>Create your Team!</h2>
        <ul>
            <li>Only a few will survive</li>
            <li>Theming using <a href="https://go.microsoft.com/fwlink/?LinkID=398939">Bootstrap</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Join the Group Chat!</h2>
        <ul>
            <li><a href="https://www.facebook.com/groups/375898252994350/">Join for episode discussion!</a></li>
        </ul>
    </div>

    <div class="col-md-3">
        <h2>Track who lives and dies</h2>
        <ul>
            <li><a href="https://go.microsoft.com/fwlink/?LinkID=517851">Current Leader Boards</a></li>
            <li><a href="https://go.microsoft.com/fwlink/?LinkID=517853">Current Dead Pool</a></li>
        </ul>
    </div>
</div>
