@model GameOfThronePool.Models.UserCharacterSelection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<h2>Decide the fate of @Model.CharacterName</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="UserCharacterSelectionID" />
            <input type="hidden" asp-for="CharacterID" />
            <input type="hidden" asp-for="CharacterName" />            
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" data-toggle="toggle" data-on="Alive" data-off="Dead" id="AliveStatus" name="AliveStatus" checked=@Model.AliveStatus>Do they live or die?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" data-toggle="toggle" data-on="WhiteWalker" data-off="No" id="BecomesAWhiteWalker" name="BecomesAWhiteWalker" checked=@Model.BecomesAWhiteWalker> @Html.DisplayNameFor(model => model.BecomesAWhiteWalker)
                    </label>
                </div>
            </div>
            <div class="form-group">
                @Html.HiddenFor(Model => Model.CreatedDate)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
