@{
    ViewData["Title"] = "Game of Thrones Season 8 DeadPool";
}

<style>
    h2, h4 {
        font-family: OFL Sorts Mill Goudy, Noto Nastaliq Urdu, My Noto Nastaliq Urdu, Georgia, serif;
    }

    .carousel-inner item {
        height: 300px;
        overflow: hidden;
        width: 100%;
    }    
    .carousel-item img {
        width: 100%;
    }
    body {
        padding-top: 50px;
        padding-bottom: 20px;
        font-family: Segoe UI,Frutiger,Frutiger Linotype,Dejavu Sans,Helvetica Neue,Arial,sans-serif;
    }

    #myCarousel > div > div.item.active > div > h3 {
        text-shadow: 2px 2px 4px #000000;
    }

    #myCarousel > div {
        text-shadow: 2px 2px 4px #000000;
    }
</style>
<h4>Join @ViewData["Kingdoms"] kingdoms already registered!</h4>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/WinterIsComing.jpg" alt="Assistant to the night king" />
            <div class="carousel-caption" role="option">
                <h3>
                    Register or sign in now!<br />
                    @Html.ActionLink("Register⚔", "Login", "Account", null, new { @class = "btn btn-default" })
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Targ.jpg" alt="ForTheNightIsDarkAndFullOfTerrors" />
            <div class="carousel-caption" role="option">
                <h3>
                    Join the group chat!<br />
                    <a class="btn btn-default" href="https://www.facebook.com/groups/375898252994350/">Join the chat!</a>
                </h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Baratheon.jpg" alt="ForTheNightIsDarkAndFullOfTerrors" />
            <div class="carousel-caption" role="option">
                <h3>    
                <a href="https://www.facebook.com/groups/375898252994350/">Split a real pool to build your own Casterly Rock!</a>
                </h3>                               
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Create your Team!</h2>
        <ul>
            <li><a asp-area="" asp-controller="DeadPoolSelection" asp-action="Index">Only a few will survive</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Rules</a></li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Join the Group Chat!</h2>
        <ul>
            <li><a href="https://www.facebook.com/groups/375898252994350/">Join for episode discussion!</a></li>
        </ul>
    </div>

    <div class="col-md-3">
        <h2>Track who lives and dies</h2>
        <ul>
            <li>View the current leaderboard!</li>
            <li><a asp-area="" asp-controller="SetupCharacters" asp-action="Index">View the Status of characters from the show!</a></li>
            <li><a asp-area="" asp-controller="DeadPoolSelection" asp-action="Index">Setup My DeathPool!</a></li>
        </ul>
    </div>
</div>

